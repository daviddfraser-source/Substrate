{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local.substrate/contracts/phase5/policy-schema-v1.json",
  "title": "Phase 5 Policy Definition v1",
  "type": "object",
  "required": [
    "policy_id",
    "version",
    "status",
    "default_effect",
    "precedence",
    "rules"
  ],
  "properties": {
    "policy_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "active",
        "archived"
      ]
    },
    "default_effect": {
      "type": "string",
      "enum": [
        "deny",
        "allow"
      ]
    },
    "approval": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "approved_by": {
          "type": [
            "string",
            "null"
          ]
        },
        "approved_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "precedence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "deny_override",
          "risk_gate",
          "budget_gate",
          "capability_gate",
          "allow"
        ]
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/rule"
      }
    }
  },
  "$defs": {
    "rule": {
      "type": "object",
      "required": [
        "rule_id",
        "effect",
        "priority",
        "conditions"
      ],
      "properties": {
        "rule_id": {
          "type": "string",
          "minLength": 1
        },
        "effect": {
          "type": "string",
          "enum": [
            "allow",
            "deny"
          ]
        },
        "priority": {
          "type": "integer",
          "minimum": 1
        },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/condition"
          }
        },
        "reason_code": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "condition": {
      "type": "object",
      "required": [
        "field",
        "operator",
        "value"
      ],
      "properties": {
        "field": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": [
            "eq",
            "neq",
            "in",
            "gte",
            "lte",
            "contains"
          ]
        },
        "value": {}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
