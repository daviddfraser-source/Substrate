{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local.substrate/contracts/phase5/event-schema-v1.json",
  "title": "Phase 5 Event Envelope v1",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "project_id",
    "actor_id",
    "source",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 8
    },
    "event_type": {
      "type": "string",
      "enum": [
        "governance.transition",
        "policy.decision",
        "execution.run",
        "budget.check",
        "budget.consume",
        "rag.retrieve",
        "prompt.version",
        "audit.append",
        "security.violation"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "project_id": {
      "type": "string",
      "minLength": 1
    },
    "actor_id": {
      "type": "string",
      "minLength": 1
    },
    "agent_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "source": {
      "type": "string",
      "enum": [
        "cli",
        "api",
        "ui",
        "worker"
      ]
    },
    "trace_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "payload": {
      "type": "object",
      "required": [
        "action",
        "outcome"
      ],
      "properties": {
        "action": {
          "type": "string"
        },
        "outcome": {
          "type": "string",
          "enum": [
            "allow",
            "deny",
            "error",
            "success",
            "failure"
          ]
        },
        "entity_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "policy_result": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "allow",
            "deny",
            null
          ]
        },
        "constraint_result": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "pass",
            "deny",
            null
          ]
        },
        "tokens_in": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0
        },
        "tokens_out": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0
        },
        "cost_estimate": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0
        },
        "reason_codes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
