{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://substrate.local/schemas/e2e-runs.schema.json",
  "title": "Substrate E2E Run Store",
  "type": "object",
  "required": ["schema_version", "updated_at", "runs"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {"type": "string", "const": "1.0"},
    "updated_at": {"type": "string", "format": "date-time"},
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "run_id",
          "timestamp",
          "agent",
          "trigger",
          "suite",
          "status",
          "duration_sec",
          "summary",
          "failures",
          "artifacts",
          "command",
          "exit_code"
        ],
        "additionalProperties": false,
        "properties": {
          "run_id": {"type": "string", "minLength": 6},
          "timestamp": {"type": "string", "format": "date-time"},
          "agent": {"type": "string", "minLength": 1},
          "packet_id": {"type": ["string", "null"]},
          "trigger": {"type": "string", "enum": ["local", "ci", "manual"]},
          "suite": {"type": "string", "minLength": 1},
          "status": {"type": "string", "enum": ["pass", "fail", "error"]},
          "duration_sec": {"type": "number", "minimum": 0},
          "command": {"type": "string", "minLength": 1},
          "exit_code": {"type": "integer"},
          "summary": {
            "type": "object",
            "required": ["passed", "failed", "skipped", "total"],
            "additionalProperties": false,
            "properties": {
              "passed": {"type": "integer", "minimum": 0},
              "failed": {"type": "integer", "minimum": 0},
              "skipped": {"type": "integer", "minimum": 0},
              "total": {"type": "integer", "minimum": 0}
            }
          },
          "failures": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["message"],
              "additionalProperties": false,
              "properties": {
                "test_id": {"type": ["string", "null"]},
                "message": {"type": "string", "minLength": 1},
                "file": {"type": ["string", "null"]},
                "snippet": {"type": ["string", "null"]}
              }
            }
          },
          "artifacts": {
            "type": "array",
            "items": {"type": "string", "minLength": 1}
          }
        }
      }
    }
  }
}
